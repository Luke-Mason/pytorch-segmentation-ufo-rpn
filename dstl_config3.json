{
    "name": "dstl",
    "n_gpu": 1,
    "use_synch_bn": false,
    "arch": {
        "type": "UFONet",
        "args": {
            "backbone": "resnet50",
            "freeze_bn": false,
            "freeze_backbone": false
        }
    },
    "trainer": {
        "epochs": 10,
        "save_dir": "saved/",
        "save_period": 20,
        "monitor": "max Mean_IoU",
        "early_stop": 10000,
        "tensorboard": true,
        "log_dir": "saved/runs",
        "log_per_iter": 10,
        "val": true,
        "val_per_epochs": 1,
        "k_stop": 1,
        "k_split": 5,
        "shuffle": false,
        "random_state": 42
    },
    "train_loader": {
        "preprocessing": {
            "patch_size": 256,
            "align_images": false,
            "img_ref_scale": "RGB",
            "overlap_percentage": 25,
            "interpolation_method": 4,
            "training_classes": [2],
            "training_band_groups": [{
                "bands": [1]
            }, {
                "bands": [2]
            }, {
                "bands": [3]
            }]
        },
        "args": {
            "batch_size": 128,
            "augment": false,
            "base_size": 512,
            "crop_size": 512,
            "shuffle": true,
            "flip": true,
            "rotate": true,
            "blur": true,
            "num_workers": 8
        }
    },
    "optimizer": {
        "type": "SGD",
        "differential_lr": true,
        "args": {
            "lr": 0.05,
            "weight_decay": 1e-4,
            "momentum": 0.9
        }
    },
    "loss": "DiceLoss",
    "ignore_index": 10,
    "lr_scheduler": {
        "type": "Poly",
        "args": {}
    }
}
