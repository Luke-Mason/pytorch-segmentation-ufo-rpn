{
    "name": "dstl_512",
    "n_gpu": 1,
    "use_synch_bn": false,
    "arch": {
        "type": "UFONet",
        "args": {
            "backbone": "resnet50",
            "freeze_bn": false,
            "freeze_backbone": false
        }
    },
    "shared_loader": {
        "img_ref_scale": "RGB",
        "patch_size": 116,
        "overlap_percentage": 50,
        "align_images": false,
        "interpolation_method": 4,
        "training_classes": [2],
        "training_band_groups": [{
                "bands": [1],
                "merge_3d": {
                    "strategy": "max",
                    "kernel": [2, 2, 1],
                    "stride": [1, 1, 1]
                }
            }, {
                "bands": [2,3,4,5],
                "merge_3d": {
                    "strategy": "mean",
                    "kernel": [2, 2, 4],
                    "stride": [1, 1, 4]
                }
            }, {
                "bands": [6,7,8,9],
                "merge_3d": {
                    "strategy": "max",
                    "kernel": [2, 2, 4],
                    "stride": [1, 1, 4]
                }
            }
        ]
    },
    "train_loader": {
        "args": {
            "batch_size": 32,
            "base_size": 512,
            "crop_size": 512,
            "augment": false,
            "shuffle": false,
            "scale": false,
            "flip": false,
            "rotate": false,
            "blur": false,
            "split": "train",
            "num_workers": 8
        }
    },
    "val_loader": {
        "args": {
            "batch_size": 32,
            "augment": false,
            "crop_size": 512,
            "val": true,
            "split": "val",
            "num_workers": 4
        }
    },
    "optimizer": {
        "type": "SGD",
        "differential_lr": true,
        "args": {
            "lr": 0.05,
            "weight_decay": 1e-4,
            "momentum": 0.9
        }
    },
    "loss": "MeanAveragePrecision",
    "ignore_index": 10,
    "lr_scheduler": {
        "type": "Poly",
        "args": {}
    },
    "trainer": {
        "epochs": 70,
        "save_dir": "saved/",
        "save_period": 5,
        "monitor": "max Mean_IoU",
        "early_stop": 10000,
        "tensorboard": true,
        "log_dir": "saved/runs",
        "log_per_iter": 10,
        "val": true,
        "val_per_epochs": 5
    }
}
