{
    "name": "dstl_512",
    "n_gpu": 1,
    "use_synch_bn": false,
    "arch": {
        "type": "UFONet",
        "args": {
            "backbone": "resnet50",
            "freeze_bn": false,
            "freeze_backbone": false
        }
    },
    "train_loader": {
        "type": "DSTL",
        "args": {
            "data_dir": "/mnt/e/ML_Data/DSTL/dstl-satellite-imagery-feature-detection",
            "batch_size": 32,
            "base_size": 512,
            "crop_size": 512,
            "augment": false,
            "shuffle": false,
            "scale": false,
            "flip": false,
            "rotate": false,
            "blur": false,
            "split": "train",
            "val_split": 0.8,
            "num_workers": 8,
            "classes": [
                0
            ],
            "training_bands": [
                1
            ],
            "patch_size": 512,
            "overlap_percentage": 10,
            "align_images": false,
            "interpolation_method": 4
        }
    },
    "val_loader": {
        "type": "DSTL",
        "args": {
            "data_dir": "/mnt/e/ML_Data/DSTL/dstl-satellite-imagery-feature-detection/",
            "batch_size": 32,
            "augment": false,
            "crop_size": 512,
            "val": true,
            "split": "val",
            "val_split": 0.8,
            "num_workers": 4
        }
    },
    "optimizer": {
        "type": "SGD",
        "differential_lr": true,
        "args": {
            "lr": 0.05,
            "weight_decay": 1e-4,
            "momentum": 0.9
        }
    },
    "loss": "MeanAveragePrecision",
    "ignore_index": 10,
    "lr_scheduler": {
        "type": "Poly",
        "args": {}
    },
    "trainer": {
        "epochs": 70,
        "save_dir": "saved/",
        "save_period": 5,
        "monitor": "max Mean_IoU",
        "early_stop": 10000,
        "tensorboard": true,
        "log_dir": "saved/runs",
        "log_per_iter": 10,
        "val": true,
        "val_per_epochs": 5
    }
}
