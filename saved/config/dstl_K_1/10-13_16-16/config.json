{
    "arch": {
        "args": {
            "backbone": "resnet50",
            "freeze_backbone": false,
            "freeze_bn": false
        },
        "type": "UFONet"
    },
    "ignore_index": 10,
    "loss": "DiceLoss",
    "lr_scheduler": {
        "args": {},
        "type": "Poly"
    },
    "n_gpu": 1,
    "name": "dstl",
    "optimizer": {
        "args": {
            "lr": 0.05,
            "momentum": 0.9,
            "weight_decay": 0.0001
        },
        "differential_lr": true,
        "type": "SGD"
    },
    "train_loader": {
        "args": {
            "augment": false,
            "base_size": 512,
            "batch_size": 128,
            "blur": true,
            "crop_size": 512,
            "flip": true,
            "num_workers": 16,
            "rotate": true,
            "shuffle": true
        },
        "preprocessing": {
            "align_images": false,
            "img_ref_scale": "RGB",
            "interpolation_method": 4,
            "overlap_percentage": 25,
            "patch_size": 256,
            "training_band_groups": [
                {
                    "bands": [
                        1
                    ]
                },
                {
                    "bands": [
                        2
                    ]
                },
                {
                    "bands": [
                        3
                    ]
                }
            ],
            "training_classes": [
                2
            ]
        }
    },
    "trainer": {
        "early_stop": 10000,
        "epochs": 10,
        "k_split": 5,
        "k_stop": 2,
        "log_dir": "saved/runs",
        "log_per_iter": 10,
        "monitor": "max Mean_IoU",
        "random_state": 42,
        "save_dir": "saved/",
        "save_period": 20,
        "shuffle": false,
        "tensorboard": true,
        "val": true,
        "val_per_epochs": 1
    },
    "use_synch_bn": false
}