{
    "name": "dstl_512",
    "n_gpu": 1,
    "use_synch_bn": false,
    "arch": {
        "type": "UFONet",
        "args": {
            "backbone": "resnet50",
            "freeze_bn": false,
            "freeze_backbone": false
        }
    },
    "train_loader": {
        "type": "DSTL",
        "args": {
            "data_dir": "/opt/home/s3630120/dstl-satellite-imagery-feature-detection",
            "batch_size": 128,
            "crop_size": 512,
            "augment": false,
            "shuffle": false,
            "scale": false,
            "flip": false,
            "rotate": false,
            "blur": false,
            "split": "train",
            "num_workers": 8,
        }
    },
    "val_loader": {
        "type": "DSTL",
        "args": {
            "data_dir": "/opt/home/s3630120/dstl-satellite-imagery-feature-detection",
            "batch_size": 32,
            "augment": false,
            "crop_size": 512,
            "val": true,
            "split": "val",
            "num_workers": 4
        }
    },
    "optimizer": {
        "type": "Adam",
        "differential_lr": true,
        "args": {
            "lr": 0.0001,
            "weight_decay": 1e-4,
        }
    },
    "loss": "MeanAveragePrecision",
    "ignore_index": 10,
    "lr_scheduler": {
        "type": "Poly",
        "args": {}
    },
    "trainer": {
        "epochs": 5,
        "save_dir": "saved/",
        "save_period": 1,
        "monitor": "max Mean_IoU",
        "early_stop": 10000,
        "tensorboard": true,
        "log_dir": "saved/runs",
        "log_per_iter": 10,
        "val": true,
        "val_per_epochs": 1
    }
}
