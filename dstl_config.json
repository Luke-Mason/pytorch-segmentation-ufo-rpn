{
    "name": "cat_512_batch32",
    "n_gpu": 1,
    "use_synch_bn": false,

    "arch": {
        "type": "UFONet",
        "args": {

            "backbone": "resnet50",
            "freeze_bn": false,
            "freeze_backbone": false
        }
    },

    "train_loader": {
        "type": "DSTL",
        "args":{
            "data_dir": "/opt/home/s3630120/dstl-satellite-imagery-feature-detection",
            "batch_size": 32,
            "base_size": 512,
            "crop_size": 512,
            "augment": true,
            "shuffle": false,
            "scale": false,
            "flip": false,
            "rotate": false,
            "blur": false,
            "split": "train",
            "num_workers": 8
        }
    },

    "val_loader": {
        "type": "DSTL",
        "args":{
            "data_dir": "/opt/home/s3630120/dstl-satellite-imagery-feature-detection/",
            "batch_size": 32,
            "crop_size": 512,
            "val": true,
            "split": "val",
            "num_workers": 4
        }
    },

    "optimizer": {
        "type": "ADAM",
        "differential_lr": true,
        "args":{
            "lr": 0.05,
            "weight_decay": 1e-4,
            "momentum": 0.9
        }
    },

    "loss": "CrossEntropyLoss2d",
    "ignore_index": 255,
    "lr_scheduler": {
        "type": "Poly",
        "args": {
            "lr": 0.01,
            "weight_decay": 0.001,
            "momentum": 0.9
        }
    },

    "trainer": {
        "epochs": 300,
        "save_dir": "saved/",
        "save_period": 5,
  
        "monitor": "max Mean_IoU",
        "early_stop": 10000,
        
        "tensorboard": true,
        "log_dir": "saved/runs",
        "log_per_iter": 10,

        "val": true,
        "val_per_epochs": 5
    }
}
